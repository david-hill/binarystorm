[31m-#[m
[31m-# maildrop. See the Postfix MAILDROP_README file for details.[m
[31m-# Also specify in main.cf: maildrop_destination_recipient_limit=1[m
[31m-#[m
[31m-#maildrop  unix  -       n       n       -       -       pipe[m
[31m-#  flags=DRhu user=vmail argv=/usr/local/bin/maildrop -d ${recipient}[m
[31m-#[m
[31m-# ====================================================================[m
[31m-#[m
[31m-# Recent Cyrus versions can use the existing "lmtp" master.cf entry.[m
[31m-#[m
[31m-# Specify in cyrus.conf:[m
[31m-#   lmtp    cmd="lmtpd -a" listen="localhost:lmtp" proto=tcp4[m
[31m-#[m
[31m-# Specify in main.cf one or more of the following:[m
[31m-#  mailbox_transport = lmtp:inet:localhost[m
[31m-#  virtual_transport = lmtp:inet:localhost[m
[31m-#[m
[31m-# ====================================================================[m
[31m-#[m
[31m-# Cyrus 2.1.5 (Amos Gouaux)[m
[31m-# Also specify in main.cf: cyrus_destination_recipient_limit=1[m
[31m-#[m
[31m-cyrus     unix  -       n       n       -       -       pipe[m
[31m-  user=cyrus argv=/usr/lib/cyrus-imapd/deliver -e -r ${sender} -m ${extension} ${user}[m
[31m-#[m
[31m-# ====================================================================[m
[31m-#[m
[31m-# Old example of delivery via Cyrus.[m
[31m-#[m
[31m-#old-cyrus unix  -       n       n       -       -       pipe[m
[31m-#  flags=R user=cyrus argv=/usr/lib/cyrus-imapd/deliver -e -m ${extension} ${user}[m
[31m-#[m
[31m-# ====================================================================[m
[31m-#[m
[31m-# See the Postfix UUCP_README file for configuration details.[m
[31m-#[m
[31m-#uucp      unix  -       n       n       -       -       pipe[m
[31m-#  flags=Fqhu user=uucp argv=uux -r -n -z -a$sender - $nexthop!rmail ($recipient)[m
[31m-#[m
[31m-# ====================================================================[m
[31m-#[m
[31m-# Other external delivery methods.[m
[31m-#[m
[31m-#ifmail    unix  -       n       n       -       -       pipe[m
[31m-#  flags=F user=ftn argv=/usr/lib/ifmail/ifmail -r $nexthop ($recipient)[m
[31m-#[m
[31m-#bsmtp     unix  -       n       n       -       -       pipe[m
[31m-#  flags=Fq. user=bsmtp argv=/usr/local/sbin/bsmtp -f $sender $nexthop $recipient[m
[31m-#[m
[31m-#scalemail-backend unix -       n       n       -       2       pipe[m
[31m-#  flags=R user=scalemail argv=/usr/lib/scalemail/bin/scalemail-store[m
[31m-#  ${nexthop} ${user} ${extension}[m
[31m-#[m
[31m-#mailman   unix  -       n       n       -       -       pipe[m
[31m-#  flags=FR user=list argv=/usr/lib/mailman/bin/postfix-to-mailman.py[m
[31m-#  ${nexthop} ${user}[m
